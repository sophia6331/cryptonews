jQuery(function(t){"use strict";t(document).on("click",".plus-btn",function(n){var a=t(this).prev("input.custom-qty");if(t("body").hasClass("rtl")){a=t(this).next("input.custom-qty")}var e=parseInt(a.val());if(!e){e=0}var s=parseInt(a.attr("max"));var i=parseInt(a.attr("step"))||1;if(!isNaN(s)){if(s>e){a.val(e+i).change()}}else{a.val(e+i).change()}return false});t(document).on("click",".minus-btn",function(n){var a=t(this).next("input.custom-qty");if(t("body").hasClass("rtl")){a=t(this).prev("input.custom-qty")}var e=parseInt(a.val());if(!e){e=0}var s=parseInt(a.attr("min"));var i=parseInt(a.attr("step"))||1;if(!isNaN(s)){if(s<e){a.val(e-i).change()}}else{a.val(e-i).change()}return false});var n=t(window).width();if(n>1024){var a;t(document).on("mousedown",".plus-btn",function(n){var e=t(this).prev("input.custom-qty");var s=parseInt(e.val());a=setInterval(function(){s++;e.val(s)},250)});t(document).on("mousedown",".minus-btn",function(n){var e=t(this).next("input.custom-qty");var s=parseInt(e.val());a=setInterval(function(){if(s>1){s--;e.val(s)}},250)});document.addEventListener("mouseup",function(){if(a)clearInterval(a)})}});