jQuery(function(t){"use strict";setTimeout(function(){if(t(".single-product .product .product_infos .cart .StripeElement").children().length>0){t(".single-product .product .product_infos .cart").addClass("stripe-button")}},1e3);function o(){var o=t(".product .product_content_wrapper .product_infos").length?t(".product .product_content_wrapper .product_infos").outerHeight():0;var r=t(".product .product_content_wrapper .product_infos").position().top;var n=t(".product .product_content_wrapper .product_infos").length?t(".product .product_content_wrapper .product_infos").outerWidth():0;var e=t(".product_content_wrapper").offset().top;if(o>t(window).innerHeight()-e&&t(window).width()>=1024){t(".product_infos").addClass("long-description")}else{t(".product_infos").css({top:e})}}if(t(".product_layout_cascade").length>0||t(".product_layout_scattered").length>0){o();t(window).on("scroll",function(){var o=t(window).scrollTop();var r=t("#site-footer").length?t("#site-footer").offset().top:0;var n=t(".product_infos.fixed").offset().top;var e=t(".product_infos.fixed").length?t(".product_infos.fixed").height():0;var p=40;var c=t(".product_content_wrapper").length?t(".product_content_wrapper").offset().top:0;if(o+e+200>r-p){t(".product_infos.fixed:not(.long-description)").css({top:(o+e-r+p)*-1})}else{t(".product_infos.fixed:not(.long-description)").css({top:c})}});t(window).on("orientationchange",function(){o()})}});