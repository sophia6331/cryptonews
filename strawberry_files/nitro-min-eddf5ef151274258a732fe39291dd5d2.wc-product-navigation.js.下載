jQuery(function(e){"use strict";var t=e(".product-images-controller");var o=e(".product-images-style-2 .product_images .product-image:not(.mobile), .product-images-style-3 .product_images .product-image:not(.mobile)");var r=e(".product-images-style-2 .product-images-controller li a span.dot, .product-images-style-3 .product-images-controller li a span.dot");var a=e(".product-images-wrapper");var i=e(".site-header-sticky").length?e(".site-header-sticky").outerHeight():0;if(e(".product_layout_cascade").length>0){var s=e(".product_layout_cascade .product-images-controller");s.css("top",a.offset().top)}e(window).on("scroll",function(){r.addClass("current");o.each(function(){var o=e(this);var a=e(' a[href="#'+o.attr("id")+'"]').data("number");if(o.offset().top+o.outerHeight()<=t.offset().top-i){r.removeClass("current");r.eq(a).addClass("current")}else{r.eq(a).removeClass("current")}});var a=e(".product_layout_cascade .fluid-width-video-wrapper");if(a.length>0){if(a.offset().top<=t.offset().top-i){e("li.video-icon span.dot").addClass("current")}else{e(".product-images-controller .video-icon .dot").removeClass("current")}if(a.offset().top+a.outerHeight()<=t.offset().top){e(".product-images-controller .video-icon .dot").removeClass("current")}}});if(e(".single-product").length>0){e('a[href*="#controller-navigation-image"]:not([href="#"])').on("click",function(){if(location.pathname.replace(/^\//,"")==this.pathname.replace(/^\//,"")&&location.hostname==this.hostname){var t=e(this.hash);t=t.length?t:e("[name="+this.hash.slice(1)+"]");var o=0;if(e("body").hasClass("admin-bar")){var o=32}var r=e(".site-header-sticky").length?e(".site-header-sticky").outerHeight():0;if(t.length){e("html, body").animate({scrollTop:t.offset().top-r-o},500);return false}}})}if(e(".product-image.video iframe")){e(".product_layout_cascade .product-images-controller .video-icon > a").on("click",function(t){e(".product-image.video iframe")[0].src+="&autoplay=1";t.preventDefault()})}});