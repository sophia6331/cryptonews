jQuery(function(e){"use strict";if(getbowtied_scripts_vars.sticky_header){var i=e(".top-headers-wrapper").length?e(".top-headers-wrapper").outerHeight():0;var t=e(".site-header").length?e(".site-header").outerHeight():0;if(e("#site-top-bar").length){t+=e("#site-top-bar").outerHeight()}e(window).on("scroll",function(){if(getbowtied_scripts_vars.mobile_sticky_header){var s=e(".site-header-sticky");if(e(this).scrollTop()>t){e(".st-content").css("padding-top",i-1);s.addClass("sticky")}else{s.removeClass("sticky");e(".st-content").css("padding-top","")}}})}if(e(".site-header .main-navigation").length&&e(".site-header .main-navigation > ul > li > .sub-menu").length){var s=e(window).height()-e(".site-header .main-navigation > ul > li > .sub-menu").offset().top;e(".site-header .main-navigation > ul > li > .sub-menu").each(function(){if(e(this).outerHeight()>s){e(this).css({"max-height":s-100,"overflow-y":"auto"})}})}function n(){if(e(window).width()>=1024){e(".top-headers-wrapper .main-navigation > ul li.menu-item-has-children").each(function(){var i=e(this).find("> .sub-menu").outerWidth();var t=e(this).find("> .sub-menu").offset().left;var s=i+t;if(s-e(window).width()>0){if(e(this).hasClass("mega-menu")){var n=s-e(window).width();e(this).find("> .sub-menu").css("left","-"+n+"px")}else{e(this).find("> .sub-menu").addClass("reverse")}}})}else{e(".top-headers-wrapper .main-navigation > ul li.menu-item-has-children").each(function(){e(this).children("ul").removeClass("reverse");if(e(this).hasClass("mega-menu")){e(this).children("ul").css("left",0)}})}}n();var a;e(window).on("resize",function(){clearTimeout(a);e(".top-headers-wrapper .main-navigation > ul li.menu-item-has-children.mega-menu > .sub-menu").css("left",0);a=setTimeout(function(){n()},250)});e(document).on("click",".site-search .close-button",function(){e(document).find("#offCanvasTop1").removeAttr("style")});e(".main-navigation > ul > li").on({mouseenter:function(){e(this).addClass("active")},mouseleave:function(){e(this).removeClass("active")}});e(".main-navigation > ul > li ul li").on({mouseenter:function(){clearTimeout(e(this).data("timeoutId"));e(this).addClass("active")},mouseleave:function(){var i=e(this);var t=setTimeout(function(){i.removeClass("active")},200);i.data("timeoutId",t)}})});