jQuery(function(o){"use strict";var t=o(".custom-layout .mobile_gallery .woocommerce-product-gallery").attr("class");var i=o(".custom-layout .mobile_gallery .flex-control-thumbs").attr("class");o(window).on("resize",function(){if(o(window).width()<=1024){o(".custom-layout .mobile_gallery > div").addClass(t);o(".custom-layout .mobile_gallery ol").addClass(i)}else{o(".custom-layout .mobile_gallery .woocommerce-product-gallery").removeClass(t);o(".custom-layout .mobile_gallery .flex-control-thumbs").removeClass(i)}});o(window).on("load",function(){if(o(window).width()>=1025){o(".custom-layout .mobile_gallery .woocommerce-product-gallery").removeClass(t);o(".custom-layout .mobile_gallery .flex-control-thumbs").removeClass(i)}});if(getbowtied_scripts_vars.product_lightbox==1){o(".product_layout_classic .woocommerce-product-gallery__wrapper .woocommerce-product-gallery__image").each(function(){o(this).attr("id","product-gallery");o(this).find("a").addClass("fresco");o(this).find(".fresco").attr("data-fresco-group",o(this).attr("id"));o(this).find(".fresco").attr("data-fresco-group-options","overflow: true, thumbnails: 'vertical', onClick: 'close'");o(this).find(".fresco img").addClass("fresco-img");if(!o(this).find(".fresco").hasClass("video")){if(o(this).find(".fresco img").attr("data-caption").length>0){o(this).find(".fresco").attr("data-fresco-caption",o(this).find(".fresco img").attr("data-caption"))}}});o(".woocommerce-product-gallery__wrapper.mobile-gallery .woocommerce-product-gallery__image").each(function(){o(this).attr("id","product-mobile-gallery");o(this).find("a").addClass("fresco");o(this).find(".fresco").attr("data-fresco-group",o(this).attr("id"));o(this).find(".fresco").attr("data-fresco-group-options","overflow: true, thumbnails: 'horizontal', onClick: 'close'");o(this).find(".fresco img").addClass("fresco-img");o(this).find(".fresco").each(function(){if(o(this).find("img").length>0){o(this).attr("data-fresco-options","thumbnail: '"+o(this).find("img").a